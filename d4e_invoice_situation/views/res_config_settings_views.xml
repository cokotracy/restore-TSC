<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_situation" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.situation</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="10"/>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div data-key="account" position="inside">
                    <h2>Situation Invoice Account</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="situation_account" class="col-lg-3 o_light_label"/>
                                        <field name="situation_account"/>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>